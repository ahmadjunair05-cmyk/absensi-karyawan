        const currentDateElement = document.getElementById('currentDate');
        
        // Attendance elements
        const attendanceStatus = document.getElementById('attendanceStatus');
        const clockInSection = document.getElementById('clockInSection');
        const clockOutSection = document.getElementById('clockOutSection');
        const clockInBtn = document.getElementById('clockInBtn');
        const clockOutBtn = document.getElementById('clockOutBtn');
        const locationInfo = document.getElementById('locationInfo');
        const locationText = document.getElementById('locationText');
        
        // Stats elements
        const todayWorkHoursElement = document.getElementById('todayWorkHours');
        const todayOvertimeElement = document.getElementById('todayOvertime');
        const totalWorkHoursElement = document.getElementById('totalWorkHours');
        const totalOvertimeElement = document.getElementById('totalOvertime');
        
        // Profile elements
        const profileName = document.getElementById('profileName');
        const profileId = document.getElementById('profileId');
        const profilePosition = document.getElementById('profilePosition');
        const profileWorkHours = document.getElementById('profileWorkHours');
        
        // History elements
        const historyList = document.getElementById('historyList');
        const historyEmpty = document.getElementById('historyEmpty');
        
        // Modal elements
        const clockInModal = document.getElementById('clockInModal');
        const clockOutModal = document.getElementById('clockOutModal');
        const closeModalButtons = document.querySelectorAll('.close-modal');
        const confirmClockInBtn = document.getElementById('confirmClockInBtn');
        const confirmClockOutBtn = document.getElementById('confirmClockOutBtn');
        
        // Tab elements
        const tabs = document.querySelectorAll('.tab');
        const tabContents = document.querySelectorAll('.tab-content');
        const navItems = document.querySelectorAll('.nav-item');

        // Fungsi untuk memperbarui waktu saat ini
        function updateCurrentTime() {
            const now = new Date();
            const timeString = now.toLocaleTimeString('id-ID');
            const dateString = now.toLocaleDateString('id-ID', {
                weekday: 'long',
                year: 'numeric',
                month: 'long',
                day: 'numeric'
            });
            
            currentTimeElement.textContent = timeString;
            currentDateElement.textContent = dateString;
        }

        // Fungsi untuk mendapatkan lokasi pengguna
        function getLocation() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(
                    (position) => {
                        const lat = position.coords.latitude;
                        const lng = position.coords.longitude;
                        currentLocation = { lat, lng };
                        
                        // Reverse geocoding sederhana (dalam aplikasi real akan menggunakan API)
                        locationText.textContent = `Lokasi: ${lat.toFixed(6)}, ${lng.toFixed(6)}`;
                        locationText.innerHTML += `<br><small style="color: var(--gray);">Lokasi berhasil dideteksi</small>`;
                    },
                    (error) => {
                        console.error("Error getting location:", error);
                        locationText.textContent = "Lokasi: Tidak dapat mengakses lokasi";
                        currentLocation = { lat: 0, lng: 0 };
                    }
                );
            } else {
                locationText.textContent = "Lokasi: Browser tidak mendukung geolocation";
                currentLocation = { lat: 0, lng: 0 };
            }
        }

        // Fungsi untuk format waktu
        function formatTime(date) {
            if (!date) return "-";
            return date.toLocaleTimeString('id-ID', { hour: '2-digit', minute: '2-digit' });
        }

        // Fungsi untuk format tanggal
        function formatDate(date) {
            if (!date) return "-";
            return date.toLocaleDateString('id-ID', { 
                day: 'numeric', 
                month: 'short',
                year: 'numeric'
            });
        }

        // Fungsi untuk format tanggal lengkap
        function formatFullDate(date) {
            if (!date) return "-";
            return date.toLocaleDateString('id-ID', { 
                weekday: 'long',
                day: 'numeric', 
                month: 'long',
                year: 'numeric'
            });
        }

        // Fungsi untuk menghitung selisih jam
        function calculateHours(startTime, endTime) {
            if (!startTime || !endTime) return 0;
            
            const diffMs = endTime - startTime;
            const diffHours = diffMs / (1000 * 60 * 60);
            
            return Math.round(diffHours * 100) / 100;
        }

        // Fungsi untuk menghitung lembur
        function calculateOvertime(workHours, normalHours) {
            if (workHours <= normalHours) return 0;
            
            const overtime = workHours - normalHours;
            // Bulatkan ke 0.5 jam terdekat
            return Math.round(overtime * 2) / 2;
        }

        // Fungsi untuk memeriksa status absensi hari ini
        function checkTodayAttendance() {
            if (!currentUser) return;
            
            const today = new Date().toDateString();
            const todayRecord = attendanceRecords.find(record => 
                record.employeeId === currentUser.id && 
                new Date(record.clockIn).toDateString() === today
            );
            
            if (todayRecord) {
                if (todayRecord.clockOut) {
                    // Sudah absen pulang
                    attendanceStatus.textContent = `Status: Sudah absen pulang pukul ${formatTime(new Date(todayRecord.clockOut))}`;
                    attendanceStatus.className = "attendance-status status-clockout";
                    clockInSection.style.display = "none";
                    clockOutSection.style.display = "none";
                    
                    // Hitung jam kerja hari ini
                    const workHours = calculateHours(
                        new Date(todayRecord.clockIn),
                        new Date(todayRecord.clockOut)
                    );
                    
                    const overtime = calculateOvertime(workHours, currentUser.normalHours);
                    
                    todayWorkHoursElement.textContent = workHours.toFixed(1);
                    todayOvertimeElement.textContent = overtime.toFixed(1);
                } else {
                    // Sudah absen masuk, belum pulang
                    attendanceStatus.textContent = `Status: Sedang bekerja (masuk pukul ${formatTime(new Date(todayRecord.clockIn))})`;
                    attendanceStatus.className = "attendance-status status-working";
                    clockInSection.style.display = "none";
                    clockOutSection.style.display = "block";
                    
                    // Hitung jam kerja sampai sekarang
                    const workHours = calculateHours(
                        new Date(todayRecord.clockIn),
                        new Date()
                    );
                    
                    todayWorkHoursElement.textContent = workHours.toFixed(1);
                    todayOvertimeElement.textContent = "0";
                }
            } else {
                // Belum absen sama sekali
                attendanceStatus.textContent = "Status: Belum absen masuk";
                attendanceStatus.className = "attendance-status";
                clockInSection.style.display = "block";
                clockOutSection.style.display = "none";
                
                todayWorkHoursElement.textContent = "0";
                todayOvertimeElement.textContent = "0";
            }
        }

        // Fungsi untuk menampilkan riwayat absensi
        function renderAttendanceHistory() {
            if (!currentUser) return;
            
            const userRecords = attendanceRecords
                .filter(record => record.employeeId === currentUser.id)
                .sort((a, b) => new Date(b.clockIn) - new Date(a.clockIn))
                .slice(0, 7); // Tampilkan 7 hari terakhir
            
            historyList.innerHTML = "";
            
            if (userRecords.length === 0) {
                historyEmpty.style.display = "block";
                return;
            }
            
            historyEmpty.style.display = "none";
            
            userRecords.forEach(record => {
                const clockInDate = new Date(record.clockIn);
                const clockOutDate = record.clockOut ? new Date(record.clockOut) : null;
                
                const workHours = calculateHours(clockInDate, clockOutDate || new Date());
                const overtime = calculateOvertime(workHours, currentUser.normalHours);
                
                const historyItem = document.createElement('div');
                historyItem.className = 'history-item';
                
                historyItem.innerHTML = `
                    <div>
                        <div class="history-date">${formatFullDate(clockInDate)}</div>
                        <div class="history-time">
                            Masuk: ${formatTime(clockInDate)} | 
                            ${clockOutDate ? `Pulang: ${formatTime(clockOutDate)}` : 'Belum pulang'}
                        </div>
                    </div>
                    <div class="history-hours">
                        <div class="work-hours">${workHours.toFixed(1)} jam</div>
                        ${overtime > 0 ? `<div class="overtime-badge">+${overtime.toFixed(1)} lembur</div>` : ''}
                    </div>
                `;
                
                historyList.appendChild(historyItem);
            });
        }

        // Fungsi untuk menghitung statistik
        function calculateStatistics() {
            if (!currentUser) return;
            
            const userRecords = attendanceRecords.filter(record => record.employeeId === currentUser.id);
            
            let totalWork = 0;
            let totalOvertime = 0;
            
            userRecords.forEach(record => {
                if (record.clockOut) {
                    const workHours = calculateHours(
                        new Date(record.clockIn),
                        new Date(record.clockOut)
                    );
                    
                    totalWork += workHours;
                    totalOvertime += calculateOvertime(workHours, currentUser.normalHours);
                }
            });
            
            totalWorkHoursElement.textContent = totalWork.toFixed(1);
            totalOvertimeElement.textContent = totalOvertime.toFixed(1);
        }

        // Fungsi untuk mengisi data profil
        function loadProfileData() {
            if (!currentUser) return;
            
            profileName.value = currentUser.name;
            profileId.value = currentUser.id;
            profilePosition.value = currentUser.position;
            profileWorkHours.value = `${currentUser.normalHours} jam/hari`;
        }

        // Fungsi login
        function login() {
            const id = loginIdInput.value.trim().toUpperCase();
            const pin = loginPinInput.value.trim();
            
            if (!id || !pin) {
                alert("Harap masukkan ID dan PIN");
                return;
            }
            
            // Cari karyawan dengan ID dan PIN yang cocok
            const employee = employees.find(emp => emp.id === id && emp.pin === pin);
            
            if (!employee) {
                alert("ID atau PIN salah. Silakan coba lagi.");
                return;
            }
            
            // Set current user
            currentUser = {
                id: employee.id,
                name: employee.name,
                position: employee.position,
                normalHours: employee.normalHours
            };
            
            // Simpan ke localStorage
            localStorage.setItem('currentUser', JSON.stringify(currentUser));
            
            // Update UI
            userNameElement.textContent = currentUser.name;
            userIdElement.textContent = `ID: ${currentUser.id}`;
            
            // Tampilkan aplikasi, sembunyikan login
            loginScreen.style.display = "none";
            appContainer.style.display = "flex";
            
            // Update data
            checkTodayAttendance();
            renderAttendanceHistory();
            calculateStatistics();
            loadProfileData();
            
            // Reset form login
            loginIdInput.value = "";
            loginPinInput.value = "";
        }

        // Fungsi logout
        function logout() {
            if (confirm("Apakah Anda yakin ingin logout?")) {
                currentUser = null;
                localStorage.removeItem('currentUser');
                
                // Kembali ke login screen
                appContainer.style.display = "none";
                loginScreen.style.display = "flex";
            }
        }

        // Fungsi absen masuk
        function clockIn() {
            const now = new Date();
            
            // Update modal
            document.getElementById('modalClockInTime').value = `${formatFullDate(now)}, ${formatTime(now)}`;
            document.getElementById('modalClockInLocation').value = currentLocation 
                ? `Lat: ${currentLocation.lat.toFixed(6)}, Lng: ${currentLocation.lng.toFixed(6)}`
                : "Lokasi tidak tersedia";
            
            // Tampilkan modal
            clockInModal.style.display = "flex";
        }

        // Fungsi konfirmasi absen masuk
        function confirmClockIn() {
            const now = new Date();
            const note = document.getElementById('clockInNote').value.trim();
            
            // Cek apakah sudah absen hari ini
            const today = now.toDateString();
            const existingRecord = attendanceRecords.find(record => 
                record.employeeId === currentUser.id && 
                new Date(record.clockIn).toDateString() === today
            );
            
            if (existingRecord) {
                alert("Anda sudah melakukan absen masuk hari ini.");
                clockInModal.style.display = "none";
                return;
            }
            
            // Tambahkan record baru
            attendanceRecords.push({
                employeeId: currentUser.id,
                clockIn: now.toISOString(),
                clockOut: null,
                location: currentLocation,
                note: note || null
            });
            
            // Simpan ke localStorage
            localStorage.setItem('attendanceRecords', JSON.stringify(attendanceRecords));
            
            // Update UI
            checkTodayAttendance();
            renderAttendanceHistory();
            
            // Tutup modal dan reset form
            clockInModal.style.display = "none";
            document.getElementById('clockInNote').value = "";
            
            alert("Absen masuk berhasil!");
        }

        // Fungsi absen pulang
        function clockOut() {
            const now = new Date();
            const today = now.toDateString();
            
            // Cari record absen masuk hari ini
            const todayRecord = attendanceRecords.find(record => 
                record.employeeId === currentUser.id && 
                new Date(record.clockIn).toDateString() === today &&
                !record.clockOut
            );
            
            if (!todayRecord) {
                alert("Anda belum absen masuk hari ini.");
                return;
            }
            
            const clockInTime = new Date(todayRecord.clockIn);
            const workHours = calculateHours(clockInTime, now);
            const overtime = calculateOvertime(workHours, currentUser.normalHours);
            
            // Update modal
            document.getElementById('modalPreviousClockIn').value = `${formatFullDate(clockInTime)}, ${formatTime(clockInTime)}`;
            document.getElementById('modalClockOutTime').value = `${formatFullDate(now)}, ${formatTime(now)}`;
            document.getElementById('modalClockOutLocation').value = currentLocation 
                ? `Lat: ${currentLocation.lat.toFixed(6)}, Lng: ${currentLocation.lng.toFixed(6)}`
                : "Lokasi tidak tersedia";
            document.getElementById('modalTotalHours').value = `${workHours.toFixed(1)} jam`;
            document.getElementById('modalOvertime').value = overtime > 0 ? `${overtime.toFixed(1)} jam` : "Tidak ada";
            
            // Tampilkan modal
            clockOutModal.style.display = "flex";
        }

        // Fungsi konfirmasi absen pulang
        function confirmClockOut() {
            const now = new Date();
            const today = now.toDateString();
            const note = document.getElementById('clockOutNote').value.trim();
            
            // Cari record absen masuk hari ini
            const todayRecordIndex = attendanceRecords.findIndex(record => 
                record.employeeId === currentUser.id && 
                new Date(record.clockIn).toDateString() === today &&
                !record.clockOut
            );
            
            if (todayRecordIndex === -1) {
                alert("Data absen tidak ditemukan.");
                clockOutModal.style.display = "none";
                return;
            }
            
            // Update record dengan waktu pulang
            attendanceRecords[todayRecordIndex].clockOut = now.toISOString();
            attendanceRecords[todayRecordIndex].noteOut = note || null;
            
            // Simpan ke localStorage
            localStorage.setItem('attendanceRecords', JSON.stringify(attendanceRecords));
            
            // Update UI
            checkTodayAttendance();
            renderAttendanceHistory();
            calculateStatistics();
            
            // Tutup modal dan reset form
            clockOutModal.style.display = "none";
            document.getElementById('clockOutNote').value = "";
            
            alert("Absen pulang berhasil!");
        }

        // Fungsi untuk menangani tab navigation
        function handleTabClick(tabId) {
            // Update tabs
            tabs.forEach(tab => {
                if (tab.dataset.tab === tabId) {
                    tab.classList.add('active');
                } else {
                    tab.classList.remove('active');
                }
            });
            
            // Update tab contents
            tabContents.forEach(content => {
                if (content.id === `${tabId}Tab`) {
                    content.classList.add('active');
                } else {
                    content.classList.remove('active');
                }
            });
            
            // Update nav items
            navItems.forEach(nav => {
                if (nav.dataset.nav === tabId) {
                    nav.classList.add('active');
                } else {
                    nav.classList.remove('active');
                }
            });
        }

        // Event Listeners
        document.addEventListener('DOMContentLoaded', function() {
            // Update waktu setiap detik
            updateCurrentTime();
            setInterval(updateCurrentTime, 1000);
            
            // Ambil lokasi pengguna
            getLocation();
            
            // Cek apakah sudah login
            if (currentUser) {
                userNameElement.textContent = currentUser.name;
                userIdElement.textContent = `ID: ${currentUser.id}`;
                
                loginScreen.style.display = "none";
                appContainer.style.display = "flex";
                
                checkTodayAttendance();
                renderAttendanceHistory();
                calculateStatistics();
                loadProfileData();
            }
            
            // Tambahkan data contoh jika tidak ada
            if (attendanceRecords.length === 0) {
                // Data contoh untuk pengujian
                const now = new Date();
                const yesterday = new Date(now);
                yesterday.setDate(now.getDate() - 1);
                
                attendanceRecords = [
                    {
                        employeeId: "EMP001",
                        clockIn: new Date(now.getFullYear(), now.getMonth(), now.getDate(), 8, 30).toISOString(),
                        clockOut: new Date(now.getFullYear(), now.getMonth(), now.getDate(), 17, 0).toISOString(),
                        location: { lat: -6.2, lng: 106.8 },
                        note: null
                    },
                    {
                        employeeId: "EMP001",
                        clockIn: new Date(yesterday.getFullYear(), yesterday.getMonth(), yesterday.getDate(), 9, 0).toISOString(),
                        clockOut: new Date(yesterday.getFullYear(), yesterday.getMonth(), yesterday.getDate(), 18, 30).toISOString(),
                        location: { lat: -6.2, lng: 106.8 },
                        note: "Meeting klien"
                    }
                ];
                
                localStorage.setItem('attendanceRecords', JSON.stringify(attendanceRecords));
            }
        });

        // Login button
        loginBtn.addEventListener('click', login);
        
        // Enter key untuk login
        loginPinInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                login();
            }
        });

        // Logout button
        logoutBtn.addEventListener('click', logout);

        // Clock in/out buttons
        clockInBtn.addEventListener('click', clockIn);
        clockOutBtn.addEventListener('click', clockOut);

        // Modal buttons
        confirmClockInBtn.addEventListener('click', confirmClockIn);
        confirmClockOutBtn.addEventListener('click', confirmClockOut);

        // Close modal buttons
        closeModalButtons.forEach(button => {
            button.addEventListener('click', function() {
                clockInModal.style.display = "none";
                clockOutModal.style.display = "none";
            });
        });

        // Close modal ketika klik di luar
        window.addEventListener('click', function(e) {
            if (e.target === clockInModal) {
                clockInModal.style.display = "none";
            }
            if (e.target === clockOutModal) {
                clockOutModal.style.display = "none";
            }
        });

        // Tab navigation
        tabs.forEach(tab => {
            tab.addEventListener('click', function() {
                const tabId = this.dataset.tab;
                handleTabClick(tabId);
            });
        });

        // Bottom navigation
        navItems.forEach(nav => {
            nav.addEventListener('click', function(e) {
                e.preventDefault();
                const navId = this.dataset.nav;
                handleTabClick(navId);
            });
        });

        // Tambahkan PWA manifest sederhana
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', function() {
                navigator.serviceWorker.register('/sw.js').catch(function(error) {
                    console.log('ServiceWorker registration failed:', error);
                });
            });
        }
    </script>
</body>
</html>
